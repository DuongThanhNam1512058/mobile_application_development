<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_h"
        android:background="@color/colorHead">
        <ImageView
            android:src="@mipmap/calculator"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_marginTop="10dp"
            android:textSize="20px"
            android:text="@string/rt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_h"
        android:layout_centerInParent="true">
        <TextView

            android:id="@+id/tv_fom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 USD"
            android:textColor="@color/colorHead"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_fromselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fom"
            android:layout_alignRight="@+id/tv_fom"
            android:text="Đô la Mỹ USD" />

        <TextView
            android:id="@+id/tv_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/tv_fom"
            android:text="="
            android:textColor="@color/colorButton"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_eq"
            android:text="1000 USD"
            android:textColor="@color/colorHead"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/tv_toselect"
            android:layout_below="@+id/tv_to"
            android:layout_alignLeft="@+id/tv_to"
            android:text="Đô la Mỹ USD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_callmain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:text="@string/pre"
            android:textColor="@color/colorButton"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>